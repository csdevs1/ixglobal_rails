                                <%= image_tag("consulting.jpg") %>                                
                            </div>
                            <div class="large-12 medium-12 small-12 columns">
                                <p>
                                    Servicios de consultoría informática.
                                </p>
                                <a href="/servicios#consultoria">Ver más <i class="fi-play"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
